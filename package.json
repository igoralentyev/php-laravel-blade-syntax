{
    "name": "php-laravel-blade-syntax",
    "displayName": "PHP Laravel Blade Syntax",
    "description": "Adds Blade syntax highlighting to PHP files",
    "publisher": "igoralentyev",
    "version": "1.0.2",
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/igoralentyev/php-laravel-blade-syntax.git"
    },
    "engines": {
        "vscode": "*"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "grammars": [
            {
                "scopeName": "source.php.blade",
                "path": "./syntaxes/blade.tmLanguage.json",
                "injectTo": [
                    "text.html.php"
                ],
                "embeddedLanguages": {
                    "comment.block.blade": "blade",
                    "meta.function.echo.blade": "blade",
                    "keyword.control.blade": "blade",
                    "meta.directive.blade": "blade",
                    "entity.name.function.blade": "blade",
                    "meta.embedded.php": "php"
                }
            }
        ],
        "languages": [
            {
                "id": "blade",
                "aliases": [
                    "Blade",
                    "blade"
                ],
                "configuration": "./blade.configuration.json"
            }
        ]
    }
}